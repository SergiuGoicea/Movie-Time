<?xml version="1.0" encoding="utf-8"?>
<ScrollView
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent">
<androidx.constraintlayout.widget.ConstraintLayout
	
	android:layout_height="match_parent"
	android:layout_width="match_parent"
	>

	<androidx.appcompat.widget.AppCompatImageView
		android:src="@android:drawable/ic_menu_gallery"
		android:layout_height="wrap_content"
		android:id="@+id/moviePoster"
		android:layout_width="0dp"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		android:adjustViewBounds="true"
		android:scaleType="centerCrop"/>

	<TextView
		android:text="Movie Title"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:id="@+id/movieTitle"
		app:layout_constraintTop_toBottomOf="@+id/moviePoster"
		android:layout_marginTop="8dp"
		tools:layout_editor_absoluteX="145dp"
		app:layout_constraintLeft_toLeftOf="parent"
		app:layout_constraintRight_toRightOf="parent"
		android:gravity="center"
		android:textSize="24sp"
		android:textStyle="bold"/>

	<TextView
		android:text="Genres"
		android:layout_width="wrap_content"
		android:layout_height="20dp"
		android:gravity="center"
		android:id="@+id/movieGenres"
		android:textSize="15sp"
		app:layout_constraintTop_toBottomOf="@+id/tagline"
		android:layout_marginTop="24dp"
		app:layout_constraintStart_toEndOf="@+id/Genres_box"
		android:layout_marginStart="8dp"/>
	<TextView
		android:text="Tagline"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		tools:layout_editor_absoluteX="182dp"
		android:id="@+id/tagline"
		android:layout_marginTop="8dp"
		app:layout_constraintTop_toBottomOf="@+id/movieTitle"
		app:layout_constraintLeft_toLeftOf="parent"
		app:layout_constraintRight_toRightOf="parent"
		android:gravity="center_horizontal"
		android:textSize="15sp"
		android:textColor="#03A9F4"/>
	<TextView
		android:text="Genres:"
		android:layout_width="wrap_content"
		android:layout_height="20dp"
		android:id="@+id/Genres_box"
		app:layout_constraintTop_toBottomOf="@+id/tagline"
		android:layout_marginTop="24dp"
		android:textSize="17sp"
		android:textStyle="bold"
		android:layout_marginStart="8dp"
		app:layout_constraintStart_toStartOf="parent"/>
	<TextView
		android:text="Overview:"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:id="@+id/overview_box"
		android:layout_marginTop="8dp"
		app:layout_constraintTop_toBottomOf="@+id/Genres_box"
		android:textSize="17sp"
		android:textStyle="bold"
		android:layout_marginStart="8dp"
		app:layout_constraintStart_toStartOf="parent"/>
	<TextView
		android:text="overview"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:id="@+id/overview"
		android:layout_marginTop="8dp"
		app:layout_constraintTop_toBottomOf="@+id/overview_box"
		app:layout_constraintEnd_toEndOf="parent"
		android:layout_marginEnd="8dp"
		app:layout_constraintStart_toStartOf="parent"
		android:layout_marginStart="8dp"/>
	<androidx.constraintlayout.widget.ConstraintLayout
		android:layout_width="wrap_content"
		android:layout_height="50dp"
		app:layout_constraintTop_toBottomOf="@+id/overview"
		android:layout_marginTop="8dp"
		android:id="@+id/budgetLayout"
		app:layout_constraintStart_toStartOf="parent"
		android:layout_marginStart="8dp">

		<TextView
			android:text="Budget:"
			android:layout_width="wrap_content"
			android:layout_height="20dp"
			android:id="@+id/budget_box"
			app:layout_constraintStart_toStartOf="parent"
			android:textSize="17dp"
			android:textStyle="bold"
			android:layout_marginBottom="15dp"
			app:layout_constraintBottom_toBottomOf="parent"
			android:layout_marginTop="15dp"
			app:layout_constraintTop_toTopOf="parent"/>
		<TextView
			android:text="budget"
			android:layout_width="wrap_content"
			android:layout_height="20dp"
			android:id="@+id/budget"
			android:textSize="15dp"
			app:layout_constraintStart_toEndOf="@+id/budget_box"
			android:layout_marginStart="8dp"
			app:layout_constraintTop_toTopOf="parent"
			app:layout_constraintBottom_toBottomOf="parent"
			android:layout_marginBottom="15dp"
			android:layout_marginTop="15dp"/>
	</androidx.constraintlayout.widget.ConstraintLayout>
	<androidx.constraintlayout.widget.ConstraintLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="8dp"
		app:layout_constraintTop_toBottomOf="@+id/budgetLayout"
		app:layout_constraintStart_toStartOf="parent"
		android:layout_marginStart="8dp"
		android:id="@+id/revenueLayout">

		<TextView
			android:text="Revenue:"
			android:layout_width="wrap_content"
			android:layout_height="20sp"
			android:id="@+id/revenue_box"
			android:textSize="17dp"
			android:textStyle="bold"
			app:layout_constraintTop_toTopOf="parent"
			android:layout_marginTop="15dp"
			app:layout_constraintBottom_toBottomOf="parent"
			android:layout_marginBottom="15dp"
			app:layout_constraintStart_toStartOf="parent"/>
		<TextView
			android:text="revenue"
			android:layout_width="wrap_content"
			android:layout_height="20dp"
			android:id="@+id/revenue"
			app:layout_constraintTop_toTopOf="parent"
			android:layout_marginTop="15dp"
			app:layout_constraintBottom_toBottomOf="parent"
			android:layout_marginBottom="15dp"
			app:layout_constraintStart_toEndOf="@+id/revenue_box"
			android:layout_marginStart="8dp"
			android:textSize="15dp"/>
	</androidx.constraintlayout.widget.ConstraintLayout>
	<TextView
		android:text="Related Movies:"
		android:layout_width="wrap_content"
		android:layout_height="20dp"
		android:id="@+id/related_box"
		app:layout_constraintStart_toStartOf="parent"
		android:layout_marginStart="8dp"
		android:layout_marginTop="8dp"
		app:layout_constraintTop_toBottomOf="@+id/revenueLayout"
		android:textSize="17sp"
		android:textStyle="bold"/>
	<androidx.appcompat.widget.AppCompatImageView
		android:layout_width="100dp"
		android:src="@android:drawable/ic_menu_gallery"
		android:layout_height="wrap_content"
		android:id="@+id/firstRelated"
		app:layout_constraintStart_toStartOf="parent"
		android:layout_marginStart="8dp"
		android:layout_marginTop="25dp"
		app:layout_constraintTop_toBottomOf="@+id/related_box"
		android:adjustViewBounds="true"
		android:scaleType="centerCrop"/>
	<androidx.appcompat.widget.AppCompatImageView
		android:layout_width="100dp"
		android:src="@android:drawable/ic_menu_gallery"
		android:layout_height="wrap_content"
		tools:layout_editor_absoluteX="155dp"
		android:id="@+id/secondRelated"
		android:foregroundGravity="center"
		android:layout_marginTop="25dp"
		app:layout_constraintLeft_toLeftOf="parent"
		app:layout_constraintRight_toRightOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/related_box"
		android:adjustViewBounds="true"
		android:scaleType="centerCrop"/>

	<androidx.appcompat.widget.AppCompatImageView
		android:src="@android:drawable/ic_menu_gallery"
		android:layout_width="100dp"
		android:layout_height="wrap_content"
		android:id="@+id/thirdRelated"
		android:layout_marginEnd="8dp"
		app:layout_constraintEnd_toEndOf="parent"
		android:layout_marginTop="25dp"
		app:layout_constraintTop_toBottomOf="@+id/related_box"
		android:adjustViewBounds="true"
		android:scaleType="centerCrop"/>
	    <TextView
            android:text="First Related Name"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:id="@+id/firstRelatedName"
            app:layout_constraintTop_toBottomOf="@+id/firstRelated" android:layout_marginTop="8dp"
            android:textSize="15dp" android:textAlignment="center" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"/>
    <TextView
            android:text="Second Related Name"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:id="@+id/secondRelatedName" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/secondRelated"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" android:textAlignment="center" android:textSize="15dp"/>
    <TextView
            android:text="Third Related Name"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:id="@+id/thirdRelatedName" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/thirdRelated" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:textSize="15dp" android:textAlignment="center"/>
</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>